<%- include('../partials/head', { title: 'Editando la película' })  %> 
	<h2>Editando la película: <%= movie.title %> </h2>
	<form action="/movies/<%= movie.id %>/edit?_method=PATCH" method="POST">
		<div>
			<label>Title:</label>
			<input type="text" name="title" value="<%= movie.title %>">
		</div>
		<div>
			<label>Rating:</label>
			<input type="text" name="rating" value="<%= movie.rating %>">
		</div>
		<div>
			<label>Awards:</label>
			<input type="text" name="awards" value="<%= movie.awards %>">
		</div>
		<div>
			<label>Release Date:</label>
			<h1> Fecha estreno: <%= movie.release_date %>  </h1>
			<input type="date" name="release_date" value="2020-02-05">
		</div>
		<div>
			<label>Genre:</label>
			<select name="genre_id">
				<option value="">Elegí un género</option>
				<% genres.forEach(genre => { %>
				<option 
					value="<%= genre.id %>"
					<%= genre.id == movie.genre_id ? 'selected' : null %> 
				>
					<%= genre.name %>
				</option>
				<% }) %>
			</select>
		</div>
		<button type="submit">GUARDAR</button>
	</form>
<%- include('../partials/footer')  %> 
